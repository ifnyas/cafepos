<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:fontFamily="monospace"
        android:text="@string/app_name"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_invoice_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:fontFamily="monospace"
        tools:text="Customer Number           #1202101161938"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_table_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:fontFamily="monospace"
        tools:text="Table 1                 2021-01-16 19:38"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:fontFamily="monospace"
        android:text="-----------------------------------------"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_items_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:fontFamily="monospace"
        android:text="-----------------------------------------"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_total_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:fontFamily="monospace"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        tools:text="Total              Â£ 120.99"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:fontFamily="monospace"
        android:text="\nThank you for dining with us\n Please come again"/>
</androidx.appcompat.widget.LinearLayoutCompat>